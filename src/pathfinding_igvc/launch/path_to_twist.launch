<launch>

    <node name="path_to_twist" pkg="pathfinding_igvc" type="path_to_twist" output="screen">
        <!-- 
            The number of poses to average out in the path to compute the 
            twist message
        -->
        <rosparam param="num_poses"> 10 </rosparam>

        <!--
            The frame of the robot
        -->
        <rosparam param="base_frame"> "base_link" </rosparam>

        <!--
        -->
        <rosparam param="global_frame"> "map" </rosparam>

        <!-- The max linear/angular speeds -->
        <rosparam param="max_linear_speed"> 0.5 </rosparam>
        <rosparam param="max_angular_speed"> 0.2 </rosparam>

        <!-- The scaling factors for the linear/angular speeds -->
        <rosparam param="linear_speed_scaling_factor"> 0.4 </rosparam>
        <rosparam param="angular_speed_scaling_factor"> 1 </rosparam>

        <!-- The path dropoff factor (how many points to consider for path to twist calc), higher is more points considered  -->
        <rosparam param="path_dropoff_factor"> 20 </rosparam>


        <remap from="/path" to="/path_finder/path" />

    </node>

</launch>
